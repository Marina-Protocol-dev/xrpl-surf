{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules"
  ],
  "include": [
    "global-setup.js",
    "src/**/*",
    "tests/**/*",
    "@types"
  ]
}